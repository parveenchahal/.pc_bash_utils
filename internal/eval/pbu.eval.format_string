#!/usr/bin/env bash

arg="$1"
if [[ "$arg" == *\ * ]] ||
    [[ "$arg" == *\$* ]] ||
    [[ "$arg" == *\`* ]] ||
    [[ "$arg" == *\\* ]] ||
    [[ "$arg" == *\&* ]] ||
    [[ "$arg" == *\'* ]] ||
    [[ "$arg" == *\"* ]] ||
    [[ "$arg" == *\!* ]] ||
    [[ "$arg" == *\#* ]] ||
    [[ "$arg" == *\(* ]] ||
    [[ "$arg" == *\)* ]] ||
    [[ "$arg" == *\{* ]] ||
    [[ "$arg" == *\}* ]] ||
    [[ "$arg" == *\[* ]] ||
    [[ "$arg" == *\]* ]] ||
    [[ "$arg" == *\** ]] ||
    [[ "$arg" == *\?* ]]
then
    echo -n "'$(pbu.strings.escape_string "$arg")'"
    exit 0
fi
echo -n "$arg"
