#!/usr/bin/env bash

pbu.read_input "Date in UTC (YYYY-MM-DD): "
date_str="$REPLY"
if [ -z "$date_str" ]
then
  date_str=$(date +"%FT%T.0Z")
  REPLY=$date_str
  exit 0
fi
pbu.read_input "Time in UTC (HH:MM:SS): "
time_str="$REPLY"
if [ -z "$time_str" ]
then
  time_str="00:00:00.0"
fi
REPLY="${date_str}T${time_str}.0Z"
exit 0